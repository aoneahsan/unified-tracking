{
  "name": "unified-tracking",
  "version": "1.0.0",
  "description": "Unified analytics and error tracking plugin for React + Capacitor Apps",
  "type": "module",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "android/variables.gradle",
    "android/proguard-rules.pro",
    "dist/",
    "ios/Sources/",
    "ios/Tests/",
    "Package.swift",
    "UnifiedTracking.podspec",
    "bin/"
  ],
  "bin": {
    "unified-tracking-setup": "./bin/setup.js"
  },
  "author": "Unified Tracking",
  "license": "MIT",
  "repository": "https://github.com/unified-tracking/capacitor-plugin.git",
  "bugs": {
    "url": "https://github.com/unified-tracking/capacitor-plugin/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "analytics",
    "tracking",
    "error-tracking",
    "firebase",
    "google-analytics",
    "sentry",
    "amplitude",
    "mixpanel"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/plugin.cjs.js",
      "types": "./dist/esm/index.d.ts"
    },
    "./react": {
      "import": "./dist/esm/react/index.js",
      "require": "./dist/plugin.cjs.js",
      "types": "./dist/esm/react/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin -configuration Debug CODE_SIGN_IDENTITY=\"\" CODE_SIGNING_REQUIRED=NO CODE_SIGNING_ALLOWED=NO",
    "verify:android": "cd android && ./gradlew clean build test",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "docgen": "docgen --api UnifiedTrackingPlugin --output-json dist/docs.json",
    "build": "npm run clean && (npm run docgen || echo 'Warning: docgen failed, continuing build...') && tsc && rollup -c rollup.config.js",
    "build:nodoc": "npm run clean && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "husky"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "swiftlint": "@ionic/swiftlint-config",
  "prettier": "@ionic/prettier-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "@capacitor/core": "^7.4.2"
  },
  "devDependencies": {
    "@capacitor/android": "^7.4.2",
    "@capacitor/core": "^7.4.2",
    "@capacitor/docgen": "^0.3.0",
    "@capacitor/ios": "^7.4.2",
    "@ionic/eslint-config": "^0.4.0",
    "@ionic/prettier-config": "^4.0.0",
    "@ionic/swiftlint-config": "^2.0.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.15",
    "@types/react": "^19.1.8",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.25.8",
    "eslint": "^9.31.0",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-java": "^2.7.3",
    "rimraf": "^6.0.1",
    "rollup": "^4.45.1",
    "rollup-plugin-esbuild": "^6.2.1",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
