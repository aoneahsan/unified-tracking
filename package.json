{
  "name": "unified-tracking",
  "version": "3.0.1",
  "description": "Unified analytics and error tracking plugin for React + Capacitor Apps",
  "type": "module",
  "main": "dist/esm/src/index.js",
  "module": "dist/esm/src/index.js",
  "types": "dist/esm/src/index.d.ts",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "android/variables.gradle",
    "android/proguard-rules.pro",
    "dist/",
    "ios/Sources/",
    "ios/Tests/",
    "Package.swift",
    "UnifiedTracking.podspec",
    "bin/"
  ],
  "bin": {
    "unified-tracking-setup": "./bin/setup.js"
  },
  "author": {
    "name": "Ahsan Mahmood",
    "email": "aoneahsan@gmail.com",
    "url": "https://github.com/aoneahsan"
  },
  "license": "MIT",
  "repository": "https://github.com/aoneahsan/unified-tracking.git",
  "bugs": {
    "url": "https://github.com/aoneahsan/unified-tracking/issues"
  },
  "homepage": "https://github.com/aoneahsan/unified-tracking#readme",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/aoneahsan"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "analytics",
    "tracking",
    "error-tracking",
    "unified-analytics",
    "cross-platform",
    "react",
    "typescript",
    "firebase",
    "google-analytics",
    "sentry",
    "amplitude",
    "mixpanel",
    "segment",
    "posthog",
    "heap",
    "matomo",
    "bugsnag",
    "rollbar",
    "datadog",
    "logrocket",
    "raygun",
    "appcenter",
    "ios",
    "android",
    "web",
    "mobile-analytics",
    "crash-reporting",
    "user-tracking",
    "event-tracking",
    "privacy-compliant"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/src/index.js",
      "types": "./dist/esm/src/index.d.ts"
    },
    "./react": {
      "import": "./dist/esm/src/react/index.js",
      "types": "./dist/esm/src/react/index.d.ts"
    },
    "./capacitor": {
      "import": "./dist/esm/src/capacitor/index.js",
      "types": "./dist/esm/src/capacitor/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "verify": "yarn verify:ios && yarn verify:android && yarn verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin -configuration Debug CODE_SIGN_IDENTITY=\"\" CODE_SIGNING_REQUIRED=NO CODE_SIGNING_ALLOWED=NO",
    "verify:android": "cd android && ./gradlew clean build test",
    "verify:web": "yarn build",
    "lint": "yarn eslint && yarn prettier --check",
    "fmt": "yarn eslint --fix && yarn prettier --write",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java,swift,md,json,yml,yaml}\"",
    "docgen": "docgen --api UnifiedTrackingPlugin --output-json dist/docs.json",
    "build": "npm run clean && (npm run docgen || echo 'Warning: docgen failed, continuing build...') && tsc && (rollup -c rollup.config.js || echo 'Warning: rollup failed, continuing build...')",
    "build:nodoc": "yarn clean && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist ./coverage",
    "watch": "tsc --watch",
    "dev": "yarn clean && tsc --watch",
    "prepublishOnly": "yarn build",
    "prepack": "yarn build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit",
    "prepare": "husky || true",
    "postinstall": "yarn build || true",
    "release": "yarn build && yarn test && yarn lint && npm publish",
    "release:dry": "yarn build && yarn test && yarn lint && npm publish --dry-run",
    "size-check": "yarn build && bundlesize",
    "audit:fix": "yarn audit --fix",
    "deps:check": "yarn outdated",
    "deps:update": "yarn upgrade --latest",
    "example:install": "cd examples/react-app && yarn install",
    "example:dev": "cd examples/react-app && yarn dev",
    "example:build": "cd examples/react-app && yarn build"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "swiftlint": "@ionic/swiftlint-config",
  "prettier": "@ionic/prettier-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "engines": {
    "node": ">=24.2.0"
  },
  "peerDependencies": {
    "@capacitor/core": "^7.4.3",
    "react": ">=19.0.0"
  },
  "peerDependenciesMeta": {
    "@capacitor/core": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@capacitor/android": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "@capacitor/docgen": "^0.3.0",
    "@capacitor/ios": "^7.4.3",
    "@ionic/eslint-config": "^0.4.0",
    "@ionic/prettier-config": "^4.0.0",
    "@ionic/swiftlint-config": "^2.0.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.12",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.25.9",
    "eslint": "^9.35.0",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "prettier-plugin-java": "^2.7.4",
    "rimraf": "^6.0.1",
    "rollup": "^4.50.0",
    "rollup-plugin-esbuild": "^6.2.1",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
